from bs4 import BeautifulSoup
from selenium import webdriver
"""
needs.py는 키워드를 선택, url검색, 키워드 검색 시 날짜구분에 이용됨
"""
import needs

url = str(needs.url1 + needs.url2)

# 드라이버 연결(Chrome)
driver = webdriver.Chrome('C:/Users/User/Desktop/chromedriver.exe')
# 암묵적으로 웹 자원 로드를 위해 2초까지 기다린다
driver.implicitly_wait(2)

# BeautifulSoup를 이용한 html 스크래핑
driver.get(url + '%20since%3A' + str(needs.s_date) + '%20until%3A' + str(needs.e_date) + '&amp;amp;amp;amp;amp;amp;lang=ko')
html = driver.page_source
soup = BeautifulSoup(html, 'html.parser')

# 내용과 게시 시간 파싱(추출)
lists = soup.find_all("p", {"class": "TweetTextSize"})
lists_time = soup.find_all("a", {"class": "tweet-timestamp"})

# 보여짐
cnt = 1
for (i, j) in zip(lists, lists_time):
    print(cnt, '///', j.get('title'), '///', i.text)
    cnt += 1
